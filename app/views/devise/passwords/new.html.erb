
<div class="form-container">
	<%= form_for resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post, class: 'form-password', role: 'form' } do |f| %>
		<%= devise_error_messages! %>
		<h2 class="form-password-heading">Forgot your password?</h2>
		<%= f.email_field :email, :autofocus => true, class: 'form-control', placeholder: "Email address" %>
		<%= f.submit "Send me reset password instructions", class: 'btn btn-lg btn-primary btn-block' %>
	<% end %>
</div>
<%= render "devise/shared/links" %>
